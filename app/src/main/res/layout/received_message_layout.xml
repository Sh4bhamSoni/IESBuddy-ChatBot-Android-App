<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_message_profile"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/ips_kid" />


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/avi"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_message_profile"
            app:cardBackgroundColor="@color/Material_blue_indigo"
            app:cardCornerRadius="20dp">








            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.joooonho.SelectableRoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/testImv"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    app:sriv_border_color="#008fea"
                    app:sriv_left_top_corner_radius="20dp"
                    app:sriv_right_top_corner_radius="20dp" />





                <TextView
                    android:id="@+id/text_received_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/testImv"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:maxWidth="180dp"
                    android:padding="10dp"
                    android:text="hi man, how are you?"
                    android:textColor="#ffffff"
                    android:textColorLink="#FFFF33"
                    android:textSize="16sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</RelativeLayout>